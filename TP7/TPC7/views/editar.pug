extends layout
block content

        each b in info
            .w3-card-4
                header.w3-container.w3-teal
                    h3 Editar aluno #{b.Número}
        each a in info
            form(class="w3-container" action="/alunos" method="POST")

                label(class="w3-text-teal") 
                    b Nome
                    input(class="w3-input w3-border w3-light-grey" type="text" value=a.Nome name="nome")

                label(class="w3-text-teal") 
                    b Git
